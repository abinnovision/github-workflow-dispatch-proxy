{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"incremental": true
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"vitest.config.*.ts",
		"shims.d.ts"
	],
	"exclude": ["node_modules"]
}
