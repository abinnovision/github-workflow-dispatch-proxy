{
	"compilerOptions": {
		"lib": ["ES2023"],
		"target": "ES2023",
		"module": "Node16",
		"moduleResolution": "Node16",
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noEmit": true
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"vitest.config.*.ts",
		"shims.d.ts"
	],
	"exclude": ["node_modules"]
}
