{
	"openapi": "3.1.0",
	"info": {
		"title": "github-workflow-dispatch-proxy",
		"description": "Authenticated proxy for GitHub Actions' workflow_dispatch event",
		"version": "1.0.0"
	},
	"components": {
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer"
			}
		}
	},
	"paths": {
		"/dispatch": {
			"post": {
				"summary": "Creates a workflow dispatch event.",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"target": {
										"type": "object",
										"properties": {
											"owner": {
												"type": "string",
												"description": "Owner of the repository."
											},
											"repo": {
												"type": "string",
												"description": "Repository name."
											},
											"ref": {
												"type": "string",
												"description": "Ref."
											},
											"workflow": {
												"type": "string",
												"description": "Workflow name."
											}
										}
									},
									"input": {
										"type": "object",
										"example": {
											"application": "production",
											"version": "1.0.0"
										},
										"additionalProperties": {
											"type": "string"
										}
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Successfully submitted workflow_dispatch event",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "dispatched"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
